<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.Controllers.LoginController"
            stylesheets="@Login.css">
    <children>
        <Label text="Username:" layoutX="50.0" layoutY="50.0" styleClass="label"/>
        <TextField fx:id="usernameField" layoutX="150.0" layoutY="50.0" styleClass="text-field"/>
        <Label text="Password:" layoutX="50.0" layoutY="100.0" styleClass="label"/>
        <PasswordField fx:id="passwordField" layoutX="150.0" layoutY="100.0" promptText="Enter your password" styleClass="text-field"/>
        <Button text="Login" layoutX="150.0" layoutY="150.0" onAction="#login" styleClass="button"/>
        <Button text="Sign Up" layoutX="150.0" layoutY="200.0" onAction="#goToSignUp" styleClass="button"/>
    </children>
</AnchorPane>
